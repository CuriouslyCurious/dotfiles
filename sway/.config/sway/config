# TODO: * selecting wifi network (once that is done)
# TODO: * selecting vpn (once that is done)

# Font
font pango:DejaVu Sans Mono 10

# The border around windows
default_border pixel 3

# Colours
set {
    $bg         #282A36
    $fg         #F8F8F2

    $dark       #1E1F26
    $medium     #474b61
    $light      #E6E6E6

    $red        #FF5555
    $magenta    #FF79C6
    $blue       #BD93F9
    $cyan       #8BE9FD
    $green      #50FA7B
    $yellow     #F1FA8C
}

# class                 border      background  text        indicator   child_border
client.focused          $blue       $blue       $blue       $blue       $blue
client.focused_inactive $dark       $dark       $dark       $dark       $dark
client.unfocused        $dark       $dark       $dark       $dark       $dark
client.urgent           $magenta    $magenta    $magenta    $magenta    $magenta
client.placeholder      $green      $green      $green      $green      $green

client.background $bg

# Gaps
smart_borders on
smart_gaps on
gaps inner 12
gaps outer 0

# Keyboard
input "*" {
    xkb_layout se,us
    xkb_options grp:alt_shift_toggle,caps:swapescape
    repeat_delay 250
    repeat_rate 50
}

# Touchpad
input "type:touchpad" {
    tap disabled
    natural_scroll enabled
    dwt enabled
    accel_profile "flat"
    pointer_accel 0
    scroll_factor 1
}

# Mouse
input "type:mouse" {
    accel_profile "flat"
    dwt enabled
    pointer_accel 0
    scroll_factor 1
}

include output.sway
include bindings.sway
include startup.sway
include swaybar
