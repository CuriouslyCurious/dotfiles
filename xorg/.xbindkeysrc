# Media control
# Pause
"mpc toggle"
    XF86AudioPlay

# Previous song
"mpc prev"
    XF86AudioPrev

# Next song
"mpc next"
    XF86AudioNext

# Stop
"mpc stop"
    XF86AudioStop

# Volume control
"amixer -q -D pulse set Master 2%+"
    XF86AudioRaiseVolume

"amixer -q -D pulse set Master 2%-"
    XF86AudioLowerVolume

"amixer -q -D pulse set Master toggle"
    XF86AudioMute

# Brightness control
"xbacklight -inc 5 -fps 50"
    XF86MonBrightnessUp

"xbacklight -dec 5 -fps 50"
    XF86MonBrightnessDown

# Power control
"systemctl suspend"
    XF86Sleep

