# Media control
# Pause
"mpc toggle"
    XF86AudioPlay

# Previous song
"mpc prev"
    XF86AudioPrev

# Next song
"mpc next"
    XF86AudioNext

# Stop
"mpc stop"
    XF86AudioStop

# Volume control
"amixer set Master 1%+"
    XF86AudioRaiseVolume

"amixer set Master 1%-"
    XF86AudioLowerVolume

"amixer set Master toggle"
    XF86AudioMute

# Brightness control
"xbacklight -inc 2 -fps 50"
    XF86MonBrightnessUp

"xbacklight -dec 2 -fps 50"
    XF86MonBrightnessDown

# Power control
"systemctl suspend"
    XF86Sleep

